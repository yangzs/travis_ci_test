<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/margin_10dim"
    android:paddingLeft="@dimen/margin_25dim"
    android:paddingRight="@dimen/margin_25dim"
    android:paddingTop="@dimen/margin_10dim" >

    <TextView
        android:id="@+id/report_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black_text1"
        android:textSize="@dimen/text_big" />

    <com.yac.yacapp.views.LinearLayoutForListView
        android:id="@+id/adds_items_ll"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/margin_20dim"
        android:orientation="horizontal" >
    </com.yac.yacapp.views.LinearLayoutForListView>

    <TextView
        android:id="@+id/report_comment_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_30dim"
        android:textColor="@color/black_text2"
        android:textSize="@dimen/text_small" />

</LinearLayout>