<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg"
    android:orientation="vertical" >

    <include
        android:id="@+id/include1"
        layout="@layout/action_bar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_color" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10dim"
                android:layout_marginTop="@dimen/margin_10dim"
                android:background="@color/white"
                android:padding="@dimen/margin_15dim" >

                <TextView
                    android:id="@+id/client_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:drawableLeft="@drawable/item_person"
                    android:drawablePadding="@dimen/margin_5dim"
                    android:gravity="center_vertical"
                    android:textColor="@color/black_text1"
                    android:textSize="@dimen/text_small" />

                <TextView
                    android:id="@+id/client_phone_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/client_name_tv"
                    android:layout_centerHorizontal="true"
                    android:drawableLeft="@drawable/item_phone"
                    android:drawablePadding="@dimen/margin_5dim"
                    android:gravity="center_vertical"
                    android:textColor="@color/black_text1"
                    android:textSize="@dimen/text_small" />

                <TextView
                    android:id="@+id/client_car_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/client_name_tv"
                    android:layout_alignParentRight="true"
                    android:drawableLeft="@drawable/item_car"
                    android:drawablePadding="@dimen/margin_5dim"
                    android:gravity="center_vertical"
                    android:textColor="@color/black_text1"
                    android:textSize="@dimen/text_small" />

                <TextView
                    android:id="@+id/client_address_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/client_name_tv"
                    android:layout_marginTop="@dimen/margin_10dim"
                    android:gravity="center_vertical"
                    android:lines="2"
                    android:textColor="@color/black_text1"
                    android:textSize="@dimen/text_small" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/adds_item_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10dim"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="gone" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/splite_line"
                    android:visibility="gone" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/margin_15dim"
                    android:paddingRight="@dimen/margin_15dim"
                    android:paddingTop="@dimen/margin_10dim"
                    android:paddingBottom="@dimen/margin_10dim" >

                    <TextView
                        android:id="@+id/adds_item_hint_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/adds_item_status_tv"
                        android:layout_alignParentLeft="true"
                        android:text="爱车管家建议增加以下项目"
                        android:textColor="@color/black_text2"
                        android:textSize="@dimen/text_smallL" />

                    <TextView
                        android:id="@+id/adds_item_status_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/pay_color"
                        android:textSize="@dimen/text_middle" />
                </RelativeLayout>
                
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/splite_line" />

                <com.yac.yacapp.views.LinearLayoutForListView
                    android:id="@+id/adds_items_contains_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/margin_10dim"
                    android:paddingLeft="@dimen/margin_15dim"
                    android:paddingRight="@dimen/margin_15dim"
                    android:paddingTop="@dimen/margin_10dim" >
                </com.yac.yacapp.views.LinearLayoutForListView>

                <!-- <RelativeLayout
