<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="40dp"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/item_selected_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:src="@drawable/selected"
        android:visibility="gone" />

    <TextView
        android:id="@+id/item_product_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_selected_img"
        android:layout_centerVertical="true"
        android:textColor="@color/black_text1"
        android:textSize="@dimen/text_middle" />

    <TextView
        android:id="@+id/item_product_number_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textColor="@color/black_text1"
        android:textSize="@dimen/text_middle" />

    <TextView
        android:id="@+id/item_product_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:textColor="@color/pay_color"
        android:textSize="@dimen/text_middle" />

</RelativeLayout>