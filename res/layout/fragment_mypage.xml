<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/avator_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/user_avator_height"
            android:background="@color/carpart_green" >

            <ImageView
                android:id="@+id/user_avatar_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/head_map"
                android:src="@drawable/default_avatar" />

            <TextView
                android:id="@+id/user_avator_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_avatar_img"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:textSize="@dimen/text_big" />
        </RelativeLayout>
        <!-- 我的订单 -->

        <RelativeLayout
            android:id="@+id/myorder_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/margin_15dim"
            android:paddingTop="@dimen/margin_15dim" >

            <ImageView
                android:id="@+id/myorder_img"
                android:layout_width="@dimen/mypage_item_image_width"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_left_dim"
                android:layout_marginRight="@dimen/margin_right_dim"
                android:src="@drawable/my_order" />

            <TextView
                android:id="@+id/myorder_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/myorder_img"
                android:text="我的订单"
                android:textColor="@color/black"
                android:textSize="@dimen/text_big" />

            <ImageView
                android:id="@+id/myorder_right_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_right_dim"
                android:src="@drawable/right_arrow" />

            <RelativeLayout
                android:id="@+id/myorder_num_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_left_dim"
                android:layout_toLeftOf="@id/myorder_right_arrow"
                android:visibility="gone" >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/point_grey" />

                <TextView
                    android:id="@+id/myorder_num_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_small" />
            </RelativeLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/splite_line" />
        <!-- 我的车 -->

        <RelativeLayout
            android:id="@+id/mycar_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/margin_15dim"
            android:paddingTop="@dimen/margin_15dim" >

            <ImageView
                android:id="@+id/mycar_img"
                android:layout_width="@dimen/mypage_item_image_width"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_left_dim"
                android:layout_marginRight="@dimen/margin_right_dim"
                android:src="@drawable/my_car" />

            <TextView
                android:id="@+id/mycar_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/mycar_img"
                android:text="我的车"
                android:textColor="@color/black"
                android:textSize="@dimen/text_big" />

            <ImageView
                android:id="@+id/mycar_right_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_right_dim"
                android:src="@drawable/right_arrow" />

            <RelativeLayout
                android:id="@+id/mycar_num_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_left_dim"
                android:layout_toLeftOf="@id/mycar_right_arrow"
                android:visibility="gone" >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/point_grey" />

                <TextView
                    android:id="@+id/mycar_num_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_small" />
            </RelativeLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/splite_line" />
        <!-- 我的地址 -->

        <RelativeLayout
            android:id="@+id/myaddress_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/margin_15dim"
            android:paddingTop="@dimen/margin_15dim" >

            <ImageView
                android:id="@+id/myaddress_img"
                android:layout_width="@dimen/mypage_item_image_width"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_left_dim"
                android:layout_marginRight="@dimen/margin_right_dim"
                android:src="@drawable/my_address" />

            <TextView
                android:id="@+id/myaddress_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/myaddress_img"
                android:text="我的地址"
                android:textColor="@color/black"
                android:textSize="@dimen/text_big" />

            <ImageView
                android:id="@+id/myaddress_right_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_right_dim"
                android:src="@drawable/right_arrow" />

            <RelativeLayout
                android:id="@+id/myaddress_num_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_left_dim"
                android:layout_toLeftOf="@id/myaddress_right_arrow"
                android:visibility="gone" >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/point_grey" />

                <TextView
                    android:id="@+id/myaddress_num_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_small" />
            </RelativeLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/splite_line" />
        <!-- 我的购物车 -->

        <RelativeLayout
            android:id="@+id/myshopping_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/margin_15dim"
            android:paddingTop="@dimen/margin_15dim"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/myshopping_img"
                android:layout_width="@dimen/mypage_item_image_width"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_left_dim"
                android:layout_marginRight="@dimen/margin_right_dim"
                android:src="@drawable/shopping_trolley" />

            <TextView
                android:id="@+id/myshopping_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/myshopping_img"
                android:text="我的购物车"
                android:textColor="@color/black"
                android:textSize="@dimen/text_big" />

            <ImageView
                android:id="@+id/myshopping_right_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_right_dim"
                android:src="@drawable/right_arrow" />

            <RelativeLayout
                android:id="@+id/myshopping_num_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_left_dim"
                android:layout_toLeftOf="@id/myshopping_right_arrow"
                android:visibility="gone" >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/point_grey" />

                <TextView
                    android:id="@+id/myshopping_num_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_small" />
            </RelativeLayout>
        </RelativeLayout>
        <!-- 我的优惠券 -->

        <RelativeLayout
            android:id="@+id/mycoupons_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/margin_15dim"
            android:paddingTop="@dimen/margin_15dim" >

            <ImageView
                android:id="@+id/mycoupons_img"
                android:layout_width="@dimen/mypage_item_image_width"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_left_dim"
                android:layout_marginRight="@dimen/margin_right_dim"
                android:src="@drawable/my_coupons" />

            <TextView
                android:id="@+id/mycoupons_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/mycoupons_img"
                android:text="我的优惠券"
                android:textColor="@color/black"
                android:textSize="@dimen/text_big" />

            <ImageView
                android:id="@+id/mycoupons_right_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_right_dim"
                android:src="@drawable/right_arrow" />

            <RelativeLayout
                android:id="@+id/mycoupons_num_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_left_dim"
                android:layout_toLeftOf="@id/mycoupons_right_arrow"
                android:visibility="gone" >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/point_grey" />

                <TextView
                    android:id="@+id/mycoupons_num_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_small" />
            </RelativeLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/splite_line" />
        <!-- 检测报告单 -->

        <RelativeLayout
            android:id="@+id/myreport_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/margin_15dim"
            android:paddingTop="@dimen/margin_15dim" >

            <ImageView
                android:id="@+id/myreport_img"
                android:layout_width="@dimen/mypage_item_image_width"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_left_dim"
                android:layout_marginRight="@dimen/margin_right_dim"
                android:src="@drawable/test_report" />

            <TextView
                android:id="@+id/myreport_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/myreport_img"
                android:text="检测报告单"
                android:textColor="@color/black"
                android:textSize="@dimen/text_big" />

            <ImageView
                android:id="@+id/myreport_right_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_right_dim"
                android:src="@drawable/right_arrow" />

            <RelativeLayout
                android:id="@+id/myreport_num_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_left_dim"
                android:layout_toLeftOf="@id/myreport_right_arrow"
                android:visibility="gone" >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/point_grey" />

                <TextView
                    android:id="@+id/myreport_num_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_small" />
            </RelativeLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/splite_line" />
    </LinearLayout>

</ScrollView>