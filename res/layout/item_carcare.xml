<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_bottom_dim5"
        android:layout_marginTop="@dimen/margin_top_dim5" >

        <ImageView
            android:id="@+id/index_bg_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/point_grey" />

        <TextView
            android:id="@+id/index_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white" />
    </FrameLayout>

    <TextView
        android:id="@+id/carcare_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/margin_bottom_dim5"
        android:layout_marginLeft="@dimen/margin_5dim"
        android:layout_marginTop="@dimen/margin_top_dim5"
        android:textColor="@color/black_text2"
        android:textSize="@dimen/text_small" />

</LinearLayout>