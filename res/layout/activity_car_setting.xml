<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/head_ll"
    style="@style/activity_bg_style"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/include1"
        layout="@layout/action_bar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_color" />

    <LinearLayout
        android:id="@+id/car_msg_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/margin_15dim" >

        <ImageView
            android:id="@+id/car_brand_img"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/car_brand_default" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/car_licence_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black_text1"
                android:textSize="@dimen/text_middle" />

            <TextView
                android:id="@+id/car_brand_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black_text2"
                android:textSize="@dimen/text_smallX" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/transparent_1"
        android:gravity="center_vertical"
        android:padding="@dimen/margin_10dim"
        android:text="@string/complete_car_details"
        android:textColor="@color/black_text2"
        android:textSize="@dimen/text_small" />

    <LinearLayout
        android:id="@+id/licence_ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/margin_15dim" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="车牌号"
            android:textColor="@color/black"
            android:textSize="@dimen/text_middle" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/province_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:drawablePadding="@dimen/margin_5dim"
                android:drawableRight="@drawable/down_arrow"
                android:gravity="left"
                android:text="京"
                android:textColor="@color/black_text1"
                android:textSize="@dimen/text_middle" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/margin_10dim"
                android:layout_marginRight="@dimen/margin_10dim"
                android:background="@color/splite_line" />

            <EditText
                android:id="@+id/number_ed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:hint="示例:B0712"
                android:inputType="text"
                android:textColor="@color/black_text1"
                android:textColorHint="@color/text_hint_color"
                android:textSize="@dimen/text_middle" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/splite_line" />

    <LinearLayout
        android:id="@+id/buy_year_ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/margin_15dim" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="购车年份"
            android:textColor="@color/black"
            android:textSize="@dimen/text_middle" />

        <RelativeLayout
            android:id="@+id/buy_year_rl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/buy_year_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:hint="购车年月"
                android:textColor="@color/black_text1"
                android:textSize="@dimen/text_middle" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_10dim"
                android:src="@drawable/right_arrow" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/splite_line" />

    <LinearLayout
        android:id="@+id/miles_ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/margin_15dim" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="里程数"
            android:textColor="@color/black"
            android:textSize="@dimen/text_middle" />

        <EditText
            android:id="@+id/miles_ed"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:background="@color/transparent"
            android:gravity="center_vertical"
            android:inputType="number"
            android:textColor="@color/black_text1"
            android:textColorHint="@color/text_hint_color"
            android:textSize="@dimen/text_middle" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/splite_line" />

    <LinearLayout
        android:id="@+id/chassis_number_ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/margin_15dim" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="车架号"
            android:textColor="@color/black"
            android:textSize="@dimen/text_middle" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/chassis_number_ed"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_toLeftOf="@+id/chassis_img"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:hint="点击右侧问号查看帮助"
                android:inputType="text"
                android:textColor="@color/black_text1"
                android:textColorHint="@color/text_hint_color"
                android:textSize="@dimen/text_middle" />

            <ImageView
                android:id="@+id/chassis_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_10dim"
                android:src="@drawable/explain" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/splite_line" />

    <LinearLayout
        android:id="@+id/engine_number_ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/margin_15dim" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="发动机号"
            android:textColor="@color/black"
            android:textSize="@dimen/text_middle" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/engine_number_ed"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_toLeftOf="@+id/engine_img"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:hint="点击右侧问号查看帮助"
                android:inputType="text"
                android:textColor="@color/black_text1"
                android:textColorHint="@color/text_hint_color"
                android:textSize="@dimen/text_middle" />

            <ImageView
                android:id="@+id/engine_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_10dim"
                android:src="@drawable/explain" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/car_setting_btn"
        style="@style/myBottomButtom_style"
        android:layout_marginTop="@dimen/margin_top_dim"
        android:text="保存" />

</LinearLayout>