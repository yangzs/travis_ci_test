<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/splite_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/margin_5dim"
        android:paddingLeft="@dimen/margin_10dim"
        android:paddingRight="@dimen/margin_10dim"
        android:paddingTop="@dimen/margin_5dim" >

        <TextView
            android:id="@+id/car_licence_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textColor="@color/black_text1"
            android:textSize="@dimen/text_middle" />

        <TextView
            android:id="@+id/text1_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/order_status_tv"
            android:text="状态："
            android:textColor="@color/black_text1"
            android:textSize="@dimen/text_middle" />

        <TextView
            android:id="@+id/order_status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/pay_color"
            android:textSize="@dimen/text_middle" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/splite_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/margin_15dim"
        android:paddingLeft="@dimen/margin_10dim"
        android:paddingRight="@dimen/margin_10dim"
        android:paddingTop="@dimen/margin_10dim" >

        <TextView
            android:id="@+id/text2_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="@dimen/margin_5dim"
            android:layout_marginRight="@dimen/margin_10dim"
            android:text="服务时间"
            android:textColor="@color/black_text1"
            android:textSize="@dimen/text_smallL" />

        <TextView
            android:id="@+id/server_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/text2_tv"
            android:layout_toRightOf="@+id/text2_tv"
            android:textColor="@color/black_text1"
            android:textSize="@dimen/text_smallL" />

        <TextView
            android:id="@+id/text3_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/text2_tv"
            android:layout_marginRight="@dimen/margin_10dim"
            android:text="服务项目"
            android:textColor="@color/black_text1"
            android:textSize="@dimen/text_smallL" />

        <TextView
            android:id="@+id/server_item_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/text3_tv"
            android:layout_toRightOf="@+id/text3_tv"
            android:singleLine="true"
            android:text="管家接车"
            android:textColor="@color/black_text1"
            android:textSize="@dimen/text_smallL" />

        <ImageView
            android:id="@+id/right_arrow_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/right_arrow" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/splite_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_5dim"
        android:layout_marginTop="@dimen/margin_5dim"
        android:paddingLeft="@dimen/margin_10dim"
        android:paddingRight="@dimen/margin_10dim" >

        <TextView
            android:id="@+id/check_server_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/buttom_bg_blue_border"
            android:paddingBottom="@dimen/margin_8dim"
            android:paddingLeft="@dimen/margin_15dim"
            android:paddingRight="@dimen/margin_15dim"
            android:paddingTop="@dimen/margin_8dim"
            android:text="查看服务流程"
            android:textColor="@color/yac_green"
            android:textSize="@dimen/text_middle" />

        <TextView
            android:id="@+id/comment_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/buttom_bg_blue_border"
            android:enabled="false"
            android:paddingBottom="@dimen/margin_8dim"
            android:paddingLeft="@dimen/margin_25dim"
            android:paddingRight="@dimen/margin_25dim"
            android:paddingTop="@dimen/margin_8dim"
            android:text="评价"
            android:textColor="@color/grey"
            android:textSize="@dimen/text_middle" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/splite_line" />

</LinearLayout>