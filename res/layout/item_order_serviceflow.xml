<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10dim"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/time_tv"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/black_text1"
            android:textSize="@dimen/text_middle" />

        <TextView
            android:id="@+id/data_tv"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/black_text2"
            android:textSize="@dimen/text_smallL" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/point_fl"
        android:layout_width="18dp"
        android:layout_height="match_parent"
        android:gravity="center_horizontal" >

        <View
            android:id="@+id/up_line_view"
            android:layout_width="1dp"
            android:layout_height="@dimen/margin_18dim"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-3dp"
            android:background="@color/green_text" />

        <ImageView
            android:id="@+id/point_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/up_line_view"
            android:layout_centerHorizontal="true"
            android:src="@drawable/point_gray" />

        <View
            android:id="@+id/down_line_view"
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:layout_below="@+id/point_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-3dp"
            android:background="@color/green_text" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_5dim"
        android:layout_marginTop="@dimen/margin_10dim"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/service_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_middle"
            android:textColor="@color/black_text1" />

        <com.yac.yacapp.views.LinearLayoutForListView
            android:id="@+id/adds_items_ll"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >
        </com.yac.yacapp.views.LinearLayoutForListView>
    </LinearLayout>

</LinearLayout>