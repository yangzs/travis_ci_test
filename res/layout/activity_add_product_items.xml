<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/activity_bg_style"
    android:orientation="vertical" >

    <include
        android:id="@+id/include1"
        layout="@layout/action_bar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_15dim"
        android:paddingLeft="@dimen/margin_20dim"
        android:paddingRight="@dimen/margin_20dim"
        android:paddingTop="@dimen/margin_15dim" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="爱车管家建议增加以下项目"
            android:textColor="@color/black_text2"
            android:textSize="@dimen/text_small" />

        <ListView
            android:id="@+id/increate_products_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_10dim"
            android:layout_marginLeft="@dimen/margin_15dim"
            android:layout_marginRight="@dimen/margin_15dim"
            android:layout_marginTop="@dimen/margin_15dim"
            android:divider="@null"
            android:dividerHeight="@dimen/margin_10dim"
            android:scrollbars="none" >
        </ListView>

        <TextView
            android:id="@+id/emptyview_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_10dim"
            android:layout_marginTop="@dimen/margin_10dim"
            android:gravity="center"
            android:text="@string/emptyview_str"
            android:textColor="@color/black_text1"
            android:textSize="@dimen/text_big" />

        <TextView
            android:id="@+id/total_price_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_10dim"
            android:layout_marginTop="@dimen/margin_10dim"
            android:gravity="right"
            android:textColor="@color/pay_color"
            android:textSize="@dimen/text_middle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_10dim"
            android:layout_marginTop="@dimen/margin_10dim"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/refuse_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_5dim"
                android:layout_weight="1"
                android:background="@drawable/bg_black_buttom"
                android:text="残忍拒绝"
                android:textColor="@color/white"
                android:textSize="@dimen/text_big"
                android:visibility="visible" />

            <Button
                android:id="@+id/agree_btn"
                style="@style/myButtom_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_5dim"
                android:layout_weight="1"
                android:text="朕同意了"
                android:textSize="@dimen/text_big"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10dim"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_5dim"
                android:gravity="center"
                android:text="拨打咨询电话"
                android:textColor="@color/black_text1"
                android:textSize="@dimen/text_big" />

            <TextView
                android:id="@+id/contact_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_5dim"
                android:gravity="center"
                android:text="400-0102-766"
                android:textColor="@color/yac_green"
                android:textSize="@dimen/text_big" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>