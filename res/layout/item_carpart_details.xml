<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res/com.yac.yacapp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/margin_10dim" >

    <LinearLayout
        android:id="@+id/top_ll"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/car_part_img"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/home_tire" />

        <TextView
            android:id="@+id/car_part_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_text1"
            android:textSize="@dimen/text_smallLL" />

        <TextView
            android:id="@+id/car_part_status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10dim"
            android:textColor="@color/black_text1"
            android:textSize="@dimen/text_big" />
    </LinearLayout>

    <Button
        android:id="@+id/update_data_btn"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/top_ll"
        android:layout_alignParentRight="true"
        android:background="@drawable/buttom_white_blue_bg"
        android:paddingLeft="@dimen/margin_10dim"
        android:paddingRight="@dimen/margin_10dim"
        android:text="更新数据"
        android:textColor="@color/black_text1"
        android:textSize="@dimen/text_small"
        android:textStyle="normal" />

    <FrameLayout
        android:id="@+id/framelayout"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/top_ll"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="@dimen/margin_10dim" >

        <TextView
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:gravity="bottom|right"
            android:text="分"
            android:textColor="@color/black_text1"
            android:textSize="@dimen/text_smallX" />

        <com.yac.yacapp.views.RoundProgressBar
            android:id="@+id/car_part_rpb"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android_custom:roundColor="#F1F1F1"
            android_custom:roundWidth="4dip"
            android_custom:textColor="@color/black_text1"
            android_custom:textSize="23sp" />
    </FrameLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/framelayout"
        android:layout_marginLeft="@dimen/margin_20dim"
        android:layout_toRightOf="@+id/framelayout"
        android:text="使用时间"
        android:textColor="@color/black_text2"
        android:textSize="@dimen/text_small" />

    <com.yac.yacapp.views.TypefaceTextView
        android:id="@+id/car_part_used_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/framelayout"
        android:layout_toLeftOf="@+id/textview31"
        android:textColor="@color/black_text1"
        android:textSize="@dimen/text_max" />

    <TextView
        android:id="@+id/textview31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/framelayout"
        android:layout_alignRight="@+id/textView3"
        android:text="月"
        android:textColor="@color/black_text2"
        android:textSize="@dimen/text_small" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/framelayout"
        android:layout_marginLeft="@dimen/margin_30dim"
        android:layout_toRightOf="@+id/textView3"
        android:text="上次使用里程"
        android:textColor="@color/black_text2"
        android:textSize="@dimen/text_small" />

    <com.yac.yacapp.views.TypefaceTextView
        android:id="@+id/car_part_uses_miles_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/framelayout"
        android:layout_toLeftOf="@+id/textview51"
        android:textColor="@color/black_text1"
        android:textSize="@dimen/text_max" />

    <TextView
        android:id="@+id/textview51"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/framelayout"
        android:layout_alignRight="@+id/textView5"
        android:text="公里"
        android:textColor="@color/black_text2"
        android:textSize="@dimen/text_small" />

    <View
        android:id="@+id/splite_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/framelayout"
        android:layout_marginTop="@dimen/margin_10dim"
        android:background="@color/splite_line" />

    <TextView
        android:id="@+id/car_part_remark_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/framelayout"
        android:layout_below="@+id/splite_line"
        android:text="破损程度一般，建议检测"
        android:textColor="@color/black_text1"
        android:textSize="@dimen/text_small" />

</RelativeLayout>